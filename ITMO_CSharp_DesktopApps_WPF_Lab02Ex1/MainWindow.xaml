<Window TextBoxBase.TextChanged ="Window_TextChanged"
        x:Class="ITMO_CSharp_DesktopApps_WPF_Lab02Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO_CSharp_DesktopApps_WPF_Lab02Ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox x:Name="TexBox" HorizontalAlignment="Left" Margin="63,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" TextChanged="TexBox_TextChanged"/>
        <RadioButton x:Name="radBut1" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="63,179,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut2" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="63,208,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="63,237,0,0" VerticalAlignment="Top"/>
        
     </Grid>
</Window>
